<div class="card mb-3">
  <div class="card-header">
    <i class="fa fa-table"></i> Vendors
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <div id="dataTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">

        <!-- datatable header controls -->
        <div class="row">
          <!-- select number of records shown -->
          <div class="col-sm-12 col-md-6">
            <div class="dataTables_length" id="dataTable_length">
              <label>Show
                <select name="dataTable_length" class="form-control form-control-sm">
                  <option value="10">10</option>
                  <option value="25">25</option>
                  <option value="50">50</option>
                  <option value="100">100</option>
                </select> Vendors
              </label>
            </div>
          </div>

          <!-- select data filtered options -->
          <div class="col-sm-12 col-md-6">
            <div id="dataTable_filter" class="dataTables_filter">
              <label>Search:
                <input type="search" class="form-control form-control-sm" placeholder="">
              </label>
            </div>
          </div>
        </div>

        <!-- datatable content -->
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-bordered dataTable" id="avatars-datatable" width="100%" cellspacing="0" role="grid">

              <thead>
                <tr role="row">
                  <th class="sorting_asc" tabindex="0" rowspan="1" colspan="1">Name</th>
                  <th class="sorting" tabindex="0" rowspan="1" colspan="1">ID</th>
                  <th class="sorting" tabindex="0" rowspan="1" colspan="1">Avatar</th>
                  <th class="sorting" tabindex="0" rowspan="1" colspan="1">Town</th>
                  <th class="sorting" tabindex="0" rowspan="1" colspan="1">Updated</th>
                  <th class="sorting" tabindex="0" rowspan="1" colspan="1">Created</th>
                  <th rowspan="1" colspan="3">Actions</th>
                </tr>
              </thead>

              <tbody>
                <% @vendors.each do |vendor, idx| %>
                  <tr role="row">
                      <td class="sorting_1"><%= vendor.name %></td>
                      <td><%= vendor.id %></td>
                      <td>
                        <%= link_to vendor.avatar.name, admin_avatar_path(vendor.avatar) %>
                      </td>
                      <td><%= vendor.town %></td>
                      <td><%= vendor.updated_at %></td>
                      <td><%= vendor.created_at %></td>
                      <td>
                        <%= link_to fa_icon("address-card"), admin_avatar_vendor_path(vendor.avatar, vendor),
                          title: "Show", class: "btn btn-success" %>
                        <%= link_to fa_icon("pencil"), edit_admin_avatar_vendor_path(vendor.avatar, vendor),
                          title: "Edit", class: "btn btn-primary" %>
                        <%= link_to fa_icon("trash"), admin_vendor_path(vendor), method: :delete, title: "Delete",
                          data: { confirm: "Are you sure you want to delete #{vendor.name}?" },
                          class: "btn btn-danger" %>
                      </td>
                  </tr>
                <% end if @vendors.present? %>
              </tbody>

            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card-footer small text-muted">Total Vendors: <%= @vendors.length %></div>
</div>

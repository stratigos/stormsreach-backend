<%= form_for([:admin, @avatar]) do |f| %>

  <%= render partial: "admin/shared/errors", locals: { model: @avatar } %>

  <div class="form-group row">
    <div class="col-md-1 col-form-label">
      <%= f.label :name, class: "pull-right" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-1 col-form-label">
      <%= f.label :town, class: "pull-right" %>
    </div>
    <div class="col-md-4">
      <%= f.text_field :town, required: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-5">
      <%= f.submit "Save Avatar", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  </div>

<% end %>

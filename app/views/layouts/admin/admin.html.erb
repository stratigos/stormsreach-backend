<!DOCTYPE html>
<html>
  <head>
    <title>StormsReach Administration</title>
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <%= stylesheet_link_tag    "admin/admin_application", media: "all" %>
    <%= javascript_include_tag "admin/admin_application" %>
  </head>

  <body class="fixed-nav sticky-footer bg-dark" id="page-top">
    <div id="wrapper" class="">
      <%= render "admin/shared/nav" %>
    </div>
    <div class="content-wrapper">
      <div class="container-fluid">
        <%= yield(:breadcrumbs) if content_for?(:breadcrumbs) %>
        <%= yield %>
        <%= render "admin/shared/footer" %>
        <%= render "admin/shared/logout_modal" %>
      </div>
    </div>

  </body>
</html>
